@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success col-4">
        @TempData["MensagemSucesso"]

    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger col-4">
        @TempData["MensagemErro"]

    </div>
}

@model List<AlunoModel>

<div class="text-left">
    <div>
        <h1>Dados dos Alunos</h1>

    </div>
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Contato</th>
                <th scope="col">Email</th>
                <th scope="col">Cep</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model)
                {
                    <tr>

                        <td>@aluno.Nome</td>
                        <td>@aluno.Idade</td>
                        <td>@aluno.Contato</td>
                        <td>@aluno.Email</td>
                        <td>@aluno.Cep</td>
                        <td>
                            <div class="d-grid gap-2 d-md-block">
                                <a type="submit" class="btn btn-primary" role="button" asp-controller="Alunos" asp-action="BuscarEndereco" asp-route-Cep="@aluno.Cep">Endereco</a>
                                <a type="submit" class="btn btn-primary" role="button" asp-controller="Alunos" asp-action="Editar" asp-route-Id="@aluno.Id">Editar</a>
                                <a  class="btn btn-primary" role="button" asp-controller="Alunos" asp-action="Excluir" asp-route-Id="@aluno.Id">Excluir</a>
                            </div>
                        </td>

                    </tr>

                }

            }



        </tbody>

    </table>
    <div class="d-grid gap-2 col-3 mx-auto">
        <a class="btn btn-primary" type="button" asp-controller="Alunos" asp-action="Adicionar">Inserir aluno</a>
    </div>
</div>